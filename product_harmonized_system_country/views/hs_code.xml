<odoo>
    <record id="hs_code_country_view_form" model="ir.ui.view">
        <field name="name">hs.code.country.view.form</field>
        <field name="model">hs.code</field>
        <field name="inherit_id" ref="product_harmonized_system.hs_code_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="after">
                <group>
                    <field name="hs_code_country_ids">
                        <tree editable="bottom">
                            <field
                                name="country_ids"
                                widget="many2many_tags"
                                options="{'no_create': True}"
                            />
                            <field name="local_code" />
                            <field name="hs_code" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
